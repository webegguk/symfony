{# app/Resources/views/lucky/number.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}

    <div class="video-crop">
        <p>Video test</p>
        <video poster="{{ asset('img/vid-placeholder.jpg') }}" id="bgvid" autoplay muted loop playsinline>
            <source src="{{ asset('vid/hall-and-woodhouse-prem.webm') }}" type="video/webm">
            <source src="{{ asset('vid/hall-and-woodhouse-prem.mp4') }}" type="video/mp4">
        </video>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg">
                <h1>Bootstrap starter template</h1>
                <p class="lead">Use this document as a way to quickly start any new project.<br> All you get is this text and a mostly barebones HTML document.</p>
                <p>Workflow for this theme includes npm installs of Bootstrap 4 and its dependencies. </p>
            </div>
            <div class="col-lg">
                <div class="card">
                    <img class="card-img-top" data-src="holder.js/1200x500?auto=yes&amp;bg=007bff&amp;fg=fff&amp;text=Your random number is {{ number }}" alt="Your random number is {{ number }}"/>
                    <div class="card-body">
                        <div class="js-holder"></div>
                    </div>
                </div>
            </div>
            <div class="col-lg">
                <div id="carouselExampleControls" class="carousel slide" data-ride="true">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" data-src="holder.js/800x400?auto=yes&amp;bg=777&amp;fg=555&amp;text=First slide" alt="First slide"/>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" data-src="holder.js/800x400?auto=yes&amp;bg=666&amp;fg=444&amp;text=Second slide" alt="Second slide"/>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" data-src="holder.js/800x400?auto=yes&amp;bg=555&amp;fg=333&amp;text=Third slide" alt="Third slide"/>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div><!-- /.container -->

{% endblock %}
